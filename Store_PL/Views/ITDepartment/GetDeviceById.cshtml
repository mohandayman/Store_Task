@using BL.Dtos.Device;
@model DeviceRenderDto

<form asp-action="Edit" method="POST">
    <!-- Hidden field for the Device Id -->
    <input type="hidden" name="Id" value="@Model.Id" />

    <!-- Field for the Device Name -->
    <div>
        <label>Device Name</label>
        <input type="text" name="Name" value="@Model.Name" />
    </div>

    <!-- Field for Acquisition Date -->
    <div>
        <label>Acquisition Date</label>
        <input type="date" name="Acquisition_Date" value="@Model.Acquisition_Date.ToString("yyyy-MM-dd")" />
    </div>

    <!-- Hidden fields for Category Details -->
    <input type="hidden" name="Category_Details.Id" value="@Model.Category_Details.Id" />
    <input type="hidden" name="Category_Details.Name" value="@Model.Category_Details.Name" />

    <!-- Looping through Properties of the Category -->
    @for (int i = 0; i < Model.Category_Details.Properties.Count; i++)
    {
        <div>
            <label>@Model.Category_Details.Properties[i].Description</label>
            <input type="text" name="Category_Details.Properties[@i].Value" value="@Model.Category_Details.Properties[i].Value" />
            <input type="hidden" name="Category_Details.Properties[@i].Id" value="@Model.Category_Details.Properties[i].Id" />
        </div>
    }

    <!-- Submit Button -->
    <button type="submit">Submit</button>
</form>
